// Base Styles

*
  box-sizing: border-box

html,
body
    height 100%
    width 100%
    font-family 'Source Sans Pro'

body
    text-rendering optimizeLegibility

body,
input
    color #444
    line-height 1.2

a,
a:visited
    color #0086cc
    text-decoration none

    &:hover
        text-decoration underline

h4
    margin 40px 0 0 0
    border-bottom 1px solid #CCC
    font-weight normal
    font-size 28px

