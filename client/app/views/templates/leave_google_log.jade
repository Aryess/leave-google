if photos.processing || contacts.processing || events.processing
    h1.pa2.matop0.biggest.darkbg.center= t('import running')
else
    h1.pa2.matop0.biggest.darkbg.center= t('import complete')
div.content
    if photos.numberPhotos
        div
            if photos.processing
                h4= t('import photo running')
            else
                h4= t('import photo complete')
            div(style="height: 3px; background: #8D6E63; width: #{(photos.numberPhotos/photos.total) * 100}%")
            p= photos.numberPhotos + t("import amount photos") + photos.total
            for url in photos.error
                p= t("import album failure") + url
    if events.number
        div
            if events.processing
                h4= t('import calendar running')
            else
                h4= t('import calendar complete')
            div(style="height: 3px; background: #8D6E63; width:#{(events.number/events.total) * 100}%")
            p= events.number + t("import amount events") + events.total
    if contacts.number
        div
            if contacts.processing
                h4= t('import contact running')
            else
                h4= t('import contact complete')
            div(style="height: 3px; background: #8D6E63; width:#{(contacts.number/contacts.total) * 100}%")
            p= contacts.number + t("import amount contacts") + contacts.total
    if invalidToken
        div.error=t('leave google invalid token')

    unless photos.processing || contacts.processing || events.processing
        p= t('import success message')
        a.btn#back-button(href="/", target="_top")=t('back to home')
